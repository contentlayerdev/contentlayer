  "version": "2.0.0",
  "tasks": [
    {
      "label": "release:patch",
      "type": "shell",
      "command": "yarn release:patch",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "focus": true,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:contentlayer",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}/packages/contentlayer" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:@contentlayer/source-contentful",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}/packages/@contentlayer/source-contentful" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:@contentlayer/source-sanity",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}/packages/@contentlayer/source-sanity" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:next-contentlayer",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}/packages/next-contentlayer" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "build:contentlayer-stackbit-yaml-generator",
      "type": "shell",
      "command": "yarn build",
      "options": { "cwd": "${workspaceFolder}/packages/contentlayer-stackbit-yaml-generator" },
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "group": "build",
        "reveal": "silent",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "dev:ts",
      "type": "shell",
      "command": "yarn dev:ts",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "dev",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "yarn lint:eslint:check",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "dev",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
