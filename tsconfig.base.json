{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true,
    // needed to import Contentlayer package version
    "resolveJsonModule": true,
    "target": "ES2020",
    "plugins": [{ "transform": "@effect-ts/tracing-plugin" }],
    "paths": {
      "@contentlayer2/utils/*": ["./packages/@contentlayer/utils/src/*"],
      "@contentlayer2/source-files/*": ["./packages/@contentlayer/source-files/src/*"],
      "@contentlayer2/*": ["./packages/@contentlayer/*/src"],
      "contentlayer2/*": ["./packages/contentlayer/src/*"],
      "contentlayer2": ["./pacakges/contentlayer/src"]
    }
  }
}
